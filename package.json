{
  "name": "solid-simple-code-editor",
  "version": "0.1.0",
  "description": "A simple code editor for Solid JS applications",
  "keywords": [
    "code",
    "editor",
    "solid",
    "solidjs",
    "simple"
  ],
  "scripts": {
    "lint": "eslint .",
    "type-check": "tsc --onEmit",
    "clean": "rimraf dist",
    "build": "vite build"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "prettier --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:raghavan-renganathan/solid-simple-code-editor.git"
  },
  "author": {
    "name": "Raghavan Renganathan",
    "email": "contact@raghavan.dev",
    "url": "https://raghavan.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.6.1",
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vite-plugin-dts": "^3.4.0",
    "vite-plugin-solid": "^2.7.0"
  }
}
