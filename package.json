{
  "name": "solid-simple-code-editor",
  "version": "0.1.1",
  "description": "A simple code editor for Solid JS applications",
  "keywords": [
    "code",
    "editor",
    "solid",
    "solidjs",
    "simple"
  ],
  "scripts": {
    "build": "yarn clean && vite build",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "prepare": "yarn build",
    "release": "release-it",
    "run:demo": "vite --config vite-demos.config.ts",
    "build:demo": "vite build --config vite-demos.config.ts",
    "type-check": "tsc --noEmit"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "prettier --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "browser": "./dist/esm/index.esm.js",
      "import": "./dist/esm/index.esm.js",
      "node": "./dist/cjs/index.js",
      "require": "./dist/cjs/index.js",
      "solid": "./dist/source/index.jsx"
    }
  },
  "files": [
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:raghavan-renganathan/solid-simple-code-editor.git"
  },
  "author": {
    "name": "Raghavan Renganathan",
    "email": "contact@raghavan.dev",
    "url": "https://raghavan.dev"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.6.1",
  "devDependencies": {
    "@release-it/conventional-changelog": "^7.0.0",
    "@types/dedent": "^0.7.0",
    "@types/node": "^20.4.5",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dedent": "^1.5.1",
    "eslint": "^8.46.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "prismjs": "^1.29.0",
    "release-it": "^16.1.3",
    "rimraf": "^5.0.1",
    "solid-js": "^1.7.8",
    "terser": "^5.19.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vite-plugin-dts": "^3.4.0",
    "vite-plugin-solid": "^2.7.0"
  },
  "peerDependencies": {
    "solid-js": "*"
  }
}
